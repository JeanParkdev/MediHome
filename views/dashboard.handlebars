<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    
    <div class="md:col-span-1 space-y-4">
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-blue-600">
            <h2 class="text-xl font-bold text-gray-800">Hello, {{username}}!</h2>
            <p class="text-gray-500 text-sm mb-4">Welcome to your MediHome.</p>
            
            <button data-modal-target="med-modal" data-modal-toggle="med-modal" class="w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors flex items-center justify-center gap-2">
                <span class="text-xl">+</span> Add Medication
            </button>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-xs uppercase font-bold mb-2">Your Cabinet</h3>
            <div class="flex justify-between items-center">
                <span class="text-3xl font-bold text-blue-600">{{medications.length}}</span>
                <span class="text-sm text-gray-400">Total Items</span>
            </div>
        </div>
    </div>

    <div class="md:col-span-3">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            ðŸ’Š Current Medications
        </h2>

        {{#if medications.length}}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {{#each medications}}
                <div class="bg-white p-5 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow relative group">
                    
                    <span class="absolute top-4 right-4 bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">
                        {{this.category}}
                    </span>

                    <h3 class="font-bold text-lg text-gray-900 mt-2">{{this.name}}</h3>
                    <p class="text-sm text-gray-500 mb-4">{{this.dosage}}</p>

                    <button class="text-red-400 hover:text-red-600 text-xs font-medium opacity-0 group-hover:opacity-100 transition-opacity">
                        Remove
                    </button>
                </div>
                {{/each}}
            </div>
        {{else}}
            <div class="bg-white p-12 rounded-lg border-2 border-dashed border-gray-300 text-center">
                <div class="mx-auto h-12 w-12 text-gray-400 mb-4 text-4xl">
                    ðŸ©¹
                </div>
                <h3 class="text-lg font-medium text-gray-900">Your cabinet is empty</h3>
                <p class="text-gray-500 mb-4">Search for a medication to get started.</p>
                <button data-modal-target="med-modal" data-modal-toggle="med-modal" class="text-blue-600 hover:underline">
                    Add your first medication
                </button>
            </div>
        {{/if}}
    </div>
</div>

<div class="mt-8">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            ðŸ©º My Care Team
        </h2>
        <button class="text-sm text-blue-600 hover:underline">+ Add Doctor</button>
    </div>

    {{#if doctors.length}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each doctors}}
            <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500 flex justify-between items-center">
                <div>
                    <h3 class="font-bold text-gray-900">{{this.name}}</h3>
                    <p class="text-sm text-gray-500">{{this.specialty}}</p>
                    <a href="tel:{{this.phone}}" class="text-xs text-blue-600 hover:underline mt-1 block">ðŸ“ž {{this.phone}}</a>
                </div>
            </div>
            {{/each}}
        </div>
    {{else}}
        <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 text-center text-sm text-gray-500">
            No doctors added yet. Keep their contact info handy here.
        </div>
    {{/if}}
</div>

