<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    
    <div class="md:col-span-1 space-y-4">
        
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-blue-600">
            <h2 class="text-xl font-bold text-gray-800">Hello, {{username}}!</h2>
            <p class="text-gray-500 text-sm mb-4">Welcome to your MediHome.</p>
            
            <button onclick="document.getElementById('med-modal').classList.remove('hidden')" class="w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors flex items-center justify-center gap-2">
                <span class="text-xl">+</span> Add Medication
            </button>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-red-500">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                    ‚ö†Ô∏è Allergies
                </h2>
                <button onclick="document.getElementById('allergy-modal').classList.remove('hidden')" class="text-xs bg-red-100 text-red-600 px-3 py-1.5 rounded hover:bg-red-200 font-bold transition-colors">
                    + Add
                </button>
            </div>
            
            {{#if allergies.length}}
                <ul class="space-y-3">
                    {{#each allergies}}
                    <li class="flex justify-between items-start text-sm bg-gray-50 p-3 rounded-lg border border-gray-100 group hover:border-red-200 transition-colors">
                        <div>
                            <div class="flex items-center gap-2">
                                <span class="font-bold text-gray-800 text-base">{{allergen}}</span>
                                <span class="severity-badge text-[10px] px-2 py-0.5 rounded border font-bold uppercase tracking-wide" 
                                      data-val="{{severity}}">
                                    {{severity}}
                                </span>
                            </div>
                            <span class="text-xs text-gray-500 block mt-1">{{reaction}}</span>
                        </div>
                        
                        <button class="delete-allergy-btn text-gray-300 hover:text-red-600 transition-colors p-1" 
                                data-id="{{id}}" 
                                title="Remove Allergy">
                            üóëÔ∏è
                        </button>
                    </li>
                    {{/each}}
                </ul>
            {{else}}
                <div class="text-center py-4 text-gray-400">
                    <p class="text-sm italic">No known allergies.</p>
                </div>
            {{/if}}
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-xs uppercase font-bold mb-2">Your Medicine</h3>
            <div class="flex justify-between items-center">
                <span class="text-3xl font-bold text-blue-600">{{medications.length}}</span>
                <span class="text-sm text-gray-400">Total Items</span>
            </div>
        </div>
    </div>

    <div class="md:col-span-3">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            üíä Medicine Cabinet
        </h2>

        {{#if medications.length}}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {{#each medications}}
                    {{#if is_active}}
                    <div class="bg-white p-5 rounded-xl border border-gray-100 shadow-sm relative group hover:shadow-md transition-shadow">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="text-lg font-bold text-gray-900">{{name}}</h3>
                                <p class="text-sm text-blue-600 font-medium">{{dosage}} ‚Ä¢ {{frequency}}</p>
                            </div>
                            
                            <div class="flex gap-2">
                                <button class="edit-med-btn text-gray-400 hover:text-blue-500" 
                                    data-id="{{id}}" 
                                    data-name="{{name}}" 
                                    data-dosage="{{dosage}}"
                                    data-freq="{{frequency}}" 
                                    data-refill="{{refill_date}}" 
                                    data-reminder="{{reminder_time}}">
                                    ‚úèÔ∏è
                                </button>
                                <button class="archive-med-btn text-gray-400 hover:text-orange-500" data-id="{{id}}" title="Move to History">üì•</button>
                                <button class="delete-init-btn text-gray-400 hover:text-red-500" data-id="{{id}}" title="Delete Forever">üóëÔ∏è</button>
                            </div>
                        </div>
                        
                        <div class="mt-4 pt-3 border-t border-gray-50 flex flex-wrap gap-2 text-xs text-gray-500">
                            {{#if refill_date}}
                                <span class="bg-orange-50 text-orange-700 px-2 py-1 rounded">üîÑ Refill: {{format_date refill_date}}</span>
                            {{/if}}
                            {{#if reminder_time}}
                                <span class="bg-purple-50 text-purple-700 px-2 py-1 rounded">‚è∞ Daily: {{format_time reminder_time}}</span>
                            {{/if}}
                        </div>
                    </div>
                    {{/if}}
                {{/each}}
            </div>

            {{!-- History Section --}}
            <div class="mt-8 border-t pt-4">
                <button onclick="document.getElementById('past-meds').classList.toggle('hidden')" class="text-gray-500 hover:text-gray-700 font-medium flex items-center gap-2 mb-4">
