<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    
    <div class="md:col-span-1 space-y-4">
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-blue-600">
            <h2 class="text-xl font-bold text-gray-800">Hello, {{username}}!</h2>
            <p class="text-gray-500 text-sm mb-4">Welcome to your MediHome.</p>
            
            <button data-modal-target="med-modal" data-modal-toggle="med-modal" class="w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors flex items-center justify-center gap-2">
                <span class="text-xl">+</span> Add Medication
            </button>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
            <h3 class="text-gray-500 text-xs uppercase font-bold mb-2">Your Cabinet</h3>
            <div class="flex justify-between items-center">
                <span class="text-3xl font-bold text-blue-600">{{medications.length}}</span>
                <span class="text-sm text-gray-400">Total Items</span>
            </div>
        </div>
    </div>

{{!-- Medications Section --}}
    <div class="md:col-span-3">
        <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            ðŸ’Š Current Medications
        </h2>

        {{#if medications.length}}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            
             {{#each medications}}
        {{> medication-card}} 
    {{else}}
        <p class="text-gray-500 italic">No medications found.</p>
    {{/each}}
</div>
            </div>
        {{else}}
            <div class="bg-white p-12 rounded-lg border-2 border-dashed border-gray-300 text-center">
                <div class="mx-auto h-12 w-12 text-gray-400 mb-4 text-4xl">
                    ðŸ©¹
                </div>
                <h3 class="text-lg font-medium text-gray-900">Your cabinet is empty</h3>
                <p class="text-gray-500 mb-4">Search for a medication to get started.</p>
                <button data-modal-target="med-modal" data-modal-toggle="med-modal" class="text-blue-600 hover:underline">
                    Add your first medication
                </button>
            </div>
        {{/if}}
    </div>
</div>

{{!-- Care Team Section --}}
<div class="mt-8">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            ðŸ©º My Care Team
        </h2>
        <button data-modal-target="doctor-modal" data-modal-toggle="doctor-modal" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700" type="button">
    + Add Doctor
</button>
    </div>

    {{#if doctors.length}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {{#each doctors}}
            <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500 flex justify-between items-center">
                <div>
                    <h3 class="font-bold text-gray-900">{{this.name}}</h3>
                    <p class="text-sm text-gray-500">{{this.specialty}}</p>
                    <a href="tel:{{this.phone}}" class="text-xs text-blue-600 hover:underline mt-1 block">ðŸ“ž {{this.phone}}</a>
                </div>
            </div>
            {{/each}}
        </div>
    {{else}}
        <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 text-center text-sm text-gray-500">
            No doctors added yet. Keep their contact info handy here.
        </div>
    {{/if}}
</div>
{{!-- Doctor input modal --}}

<div id="doctor-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Add a Doctor
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="doctor-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <form class="p-4 md:p-5" id="add-doctor-form">
                <div class="grid gap-4 mb-4 grid-cols-2">
                    <div class="col-span-2">
                        <label for="doc-name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Doctor's Name</label>
                        <input type="text" id="doc-name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Dr. Smith" required>
                    </div>
                    <div class="col-span-2">
                        <label for="doc-specialty" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Specialty</label>
                        <input type="text" id="doc-specialty" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="e.g. Cardiologist, PCP" required>
                    </div>
                    <div class="col-span-2 sm:col-span-1">
                        <label for="doc-phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone</label>
                        <input type="tel" id="doc-phone" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="555-0123" required>
                    </div>
                    <div class="col-span-2 sm:col-span-1">
                        <label for="doc-email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                        <input type="email" id="doc-email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="doc@clinic.com" required>
                    </div>
                </div>
                <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                    <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                    Add Doctor
                </button>
            </form>
        </div>
    </div>
</div>

{{!-- Upcoming Schedule Section --}}
<div class="bg-white p-6 rounded-lg shadow-md mt-6">
    <div class="flex justify-between items-center mb-4 border-b pb-2">
        <h3 class="font-bold text-gray-800">ðŸ“… Upcoming Schedule</h3>
        <button class="text-xs text-blue-600 hover:underline">+ Add Event</button>
    </div>
    
    {{#if appointments.length}}
        <ol class="relative border-l border-gray-200 ml-2">                  
            {{#each appointments}}
            <li class="mb-6 ml-4">
                <div class="absolute w-3 h-3 bg-blue-600 rounded-full mt-1.5 -left-1.5 border border-white"></div>
                
                <time class="mb-1 text-sm font-normal leading-none text-gray-400">
                    {{format_date this.date}}
                </time>
                
                <h3 class="text-sm font-semibold text-gray-900">{{this.title}}</h3>
                <p class="mb-4 text-xs font-normal text-gray-500">{{this.type}}</p>
            </li>
            {{/each}}
        </ol>
    {{else}}
        <p class="text-sm text-gray-500 italic">No upcoming appointments.</p>
    {{/if}}
</div>
 {{!-- Medication input --}}


<div id="med-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Add a Medication
                </h3>
                <button type="button" class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="med-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <div class="p-4 md:p-5">
                <form class="space-y-4" id="add-med-form">
                    <div>
                        <label for="med-search" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Search Drug Name</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                                </svg>
                            </div>
                            <input type="search" id="med-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="e.g. Lisinopril, Ibuprofen..." required />
                            <button type="button" id="search-btn" class="text-white absolute end-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
                        </div>
                    </div>
                    
                    <div id="search-results" class="hidden z-10 w-full bg-white rounded-lg shadow dark:bg-gray-700">
                        <ul class="h-48 py-2 overflow-y-auto text-gray-700 dark:text-gray-200" aria-labelledby="dropdownUsersButton">
                            </ul>
                    </div>

                    <div>
                        <label for="med-dosage" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Dosage </label>
                        <input type="text" name="dosage" id="med-dosage" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="e.g. 10mg" required />
                    </div>
                    
                    <div>
                        <label for="med-frequency" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Frequency</label>
                        <input type="text" name="frequency" id="med-frequency" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="e.g. Daily, Weekly, As needed" required />
                    </div>

                    <div>
                        <label for="med-category" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Category</label>
                        <select id="med-category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
                            <option value="Prescription" selected>Prescription</option>
                            <option value="Over-the-Counter">Over-the-Counter (OTC)</option>
                            <option value="Supplement/Vitamin">Vitamin / Supplement</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add to Cabinet</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/dashboard.js"></script>