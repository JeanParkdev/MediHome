<script>
    document.addEventListener("DOMContentLoaded", function() {
        const badges = document.querySelectorAll('.severity-badge');
        badges.forEach(badge => {
            const val = badge.getAttribute('data-val');
            if (val === 'Mild') badge.classList.add('bg-green-100', 'text-green-700', 'border-green-200');
            else if (val === 'Moderate') badge.classList.add('bg-yellow-100', 'text-yellow-700', 'border-yellow-200');
            else if (val === 'Severe') badge.classList.add('bg-orange-100', 'text-orange-700', 'border-orange-200');
            else if (val === 'Life-Threatening') badge.classList.add('bg-red-100', 'text-red-700', 'border-red-200', 'animate-pulse');
            else badge.classList.add('bg-gray-100', 'text-gray-700', 'border-gray-200');
        });
    });
</script>

