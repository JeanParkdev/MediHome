                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                </button>
                
                <div id="past-meds" class="hidden grid grid-cols-1 md:grid-cols-2 gap-4 opacity-75">
                    {{#each medications}}
                        {{#unless is_active}}
                        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 flex justify-between items-center">
                            <div>
                                <h4 class="font-bold text-gray-600 line-through">{{name}}</h4>
                                <p class="text-xs text-gray-500">{{dosage}}</p>
                            </div>
                            <div class="flex gap-2">
                                <button class="restore-med-btn text-green-600 hover:text-green-800 text-sm font-bold" data-id="{{id}}">Restore ‚Ü∫</button>
                                <button class="delete-init-btn text-red-400 hover:text-red-600 text-sm" data-id="{{id}}">üóëÔ∏è</button>
                            </div>
                        </div>
                        {{/unless}}
                    {{/each}}
                </div>
            </div>

        {{else}}
            <div class="bg-white p-12 rounded-lg border-2 border-dashed border-gray-300 text-center">
                <div class="mx-auto h-12 w-12 text-gray-400 mb-4 text-4xl">ü©π</div>
                <h3 class="text-lg font-medium text-gray-900">Your cabinet is empty</h3>
